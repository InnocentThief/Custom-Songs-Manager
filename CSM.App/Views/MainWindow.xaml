<telerik:RadRibbonWindow x:Class="CSM.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:CSM.App" 
                         xmlns:navigation="clr-namespace:CSM.App.Views.Controls.Navigation" 
                         xmlns:workspaces="clr-namespace:CSM.App.Views.Workspaces"
                         mc:Ignorable="d"
        Title="MainWindow"
                         ResizeMode="CanResizeWithGrip"
                         Icon="/CSM.ico"
                          Background="{telerik:Windows11Resource ResourceKey=AlternativeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <navigation:Navigation Margin="4,25,0,0" DataContext="{Binding Navigation}" />
        <ContentControl Grid.Column="1" Content="{Binding Workspaces/}" />
    </Grid>

</telerik:RadRibbonWindow>
