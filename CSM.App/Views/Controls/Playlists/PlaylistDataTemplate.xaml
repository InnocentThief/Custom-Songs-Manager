<UserControl x:Class="CSM.App.Views.Controls.Playlists.PlaylistDataTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:behaviours="clr-namespace:CSM.App.Behaviours"
             xmlns:p="clr-namespace:CSM.App.Properties"
             xmlns:common="clr-namespace:CSM.App.Views.Common"
             xmlns:local="clr-namespace:CSM.App.Views.Controls.Playlists"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="3" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>
        <!-- Header -->
        <Grid Background="#88018574">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!-- Title -->
            <TextBlock Text="{Binding PlaylistTitle}" Style="{StaticResource HeaderTitleStyle}" />
            <!-- Commands -->
            <telerik:RadToolBarTray Grid.Column="1">
                <!-- View Definitions -->
                <telerik:RadToolBar Style="{StaticResource HeaderToolBarStyle}" >
                    <TextBlock Text="View" />
                    <telerik:RadComboBox ItemsSource="{Binding ViewDefinitions}" SelectedItem="{Binding SelectedViewDefinition}" DisplayMemberPath="Name" Background="Transparent"  Focusable="False" Visibility="{Binding ShowViewDefinitions, Converter={StaticResource BooleanToVisibilityConverter}}" SelectionChanged="ViewDefinitions_SelectionChanged" />
                    <telerik:RadButton ToolTip="Create new view definition" Click="Add_Click">
                        <telerik:RadGlyph Glyph="&#xe907;" />
                    </telerik:RadButton>
                    <telerik:RadButton ToolTip="Save selected view definition" Click="Save_Click" IsEnabled="{Binding CanSaveViewDefinition}">
                        <telerik:RadGlyph Glyph="&#xe109;" />
                    </telerik:RadButton>
                    <telerik:RadButton ToolTip="Delete selected view definition" Click="Delete_Click" IsEnabled="{Binding CanDeleteViewDefinition}">
                        <telerik:RadGlyph Glyph="&#xe10c;" />
                    </telerik:RadButton>
                </telerik:RadToolBar>
                <!-- Fetch data, save sort order / save -->
                <telerik:RadToolBar Style="{StaticResource HeaderToolBarStyle}" >
                    <telerik:RadButton Command="{Binding UpdateFromSourceCommand}" ToolTip="Update data from source" Visibility="{Binding HasExternalSource, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <telerik:RadGlyph Glyph="&#xe132;" />
                    </telerik:RadButton>
                    <telerik:RadToolBarSeparator Visibility="{Binding HasExternalSource, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <telerik:RadButton Command="{Binding FetchDataCommand}" ToolTip="{x:Static p:Resources.ToolTip_Playlist_FetchData}">
                        <telerik:RadGlyph Glyph="&#xe68F;" />
                    </telerik:RadButton>
                    <telerik:RadToolBarSeparator />
                    <telerik:RadButton Command="{Binding ApplySortOrderAndSaveCommand}" ToolTip="{x:Static p:Resources.ToolTip_Playlist_SavePlaylistWithCurrentOrder}">
                        <telerik:RadGlyph Glyph="&#xe666;" />
                    </telerik:RadButton>
                    <telerik:RadToolBarSeparator />
                    <telerik:RadButton Command="{Binding SavePlaylistCommand}" ToolTip="{x:Static p:Resources.ToolTip_Playlist_SavePlaylist}">
                        <telerik:RadGlyph Glyph="&#xe109;" />
                    </telerik:RadButton>
                </telerik:RadToolBar>
            </telerik:RadToolBarTray>

        </Grid>
        <!-- Playlist infos -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Image and playlist informations -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <telerik:RadButton Command="{Binding ChooseCoverImageCommand}" Focusable="False" Padding="0" Background="Transparent" BorderThickness="0"  ToolTip="{x:Static p:Resources.ToolTip_Playlist_ClickToChangeCoverImage}">
                    <Image Source="{Binding CoverImage}" />
                </telerik:RadButton>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!-- Playlist title -->
                    <telerik:Label Content="{x:Static p:Resources.Playlist_Title}" />
                    <telerik:RadWatermarkTextBox Grid.Column="1" Text="{Binding PlaylistTitle, UpdateSourceTrigger=PropertyChanged}" />
                    <!-- Playlist author -->
                    <telerik:Label Grid.Row="1" Content="{x:Static p:Resources.Playlist_Author}" />
                    <telerik:RadWatermarkTextBox Grid.Column="1" Grid.Row="1" Text="{Binding PlaylistAuthor, UpdateSourceTrigger=PropertyChanged}" />
                    <!-- Playlist description -->
                    <telerik:Label Grid.Row="2" Content="{x:Static p:Resources.Playlist_Description}" />
                    <telerik:RadWatermarkTextBox Grid.Column="1" Grid.Row="2" Text="{Binding PlaylistDescription, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Grid>
        </Grid>
        <!-- Songs -->
        <Grid Grid.Row="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <telerik:RadGridView 
                x:Name="playlistLeftGridView"
                behaviours:GridViewHeaderContextMenuBehaviour.IsEnabled="True"
                ItemsSource="{Binding Songs}"
                Margin="3" 
                SelectedItem="{Binding SelectedSong}"
                FilterOperatorsLoading="RadGridView_FilterOperatorsLoading"
                SelectionChanged="RadGridView_SelectionChanged"
                Sorted="RadGridView_Sorted"
                Style="{StaticResource RadGridViewStyle}">
                <telerik:RadGridView.Columns>
                    <!-- Key -->
                    <telerik:GridViewDataColumn UniqueName="BsrKey" Header="BSR" Width="Auto" DataMemberBinding="{Binding BsrKeyHex}" IsFilterable="true" FilterMemberPath="BsrKey">
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BsrKey}" />
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>
                    <!-- Title of the song -->
                    <telerik:GridViewDataColumn UniqueName="SongTitle" Header="{x:Static p:Resources.Song_Title}" DataMemberBinding="{Binding SongName}" Width="*" TextTrimming="CharacterEllipsis" />
                    <!-- Mapper of the song -->
                    <telerik:GridViewDataColumn UniqueName="SongMapper" Header="{x:Static p:Resources.Song_Mapper}" DataMemberBinding="{Binding LevelAuthorName}" Width="*" TextTrimming="CharacterEllipsis" />
                    <!-- Difficulties -->
                    <telerik:GridViewDataColumn UniqueName="SongFifficulties" Header="{x:Static p:Resources.Song_Difficulties}" DataMemberBinding="{Binding Difficulties}" Width="Auto">
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <local:SongDifficultyEditControl />
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>
                    <!-- Delete button (remove song from playlist) -->
                    <telerik:GridViewColumn UniqueName="DeleteButton" Width="Auto" IsResizable="False">
                        <telerik:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <telerik:RadButton Command="{Binding RemoveFromPlaylistCommand}" Grid.Column="1" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" ToolTip="{x:Static p:Resources.ToolTip_Song_RemoveFromPlaylist}" Focusable="False">
                                    <telerik:RadGlyph Glyph="&#xe121;" Foreground="Red" />
                                </telerik:RadButton>
                            </DataTemplate>
                        </telerik:GridViewColumn.CellTemplate>
                    </telerik:GridViewColumn>
                </telerik:RadGridView.Columns>
            </telerik:RadGridView>

            <!-- Entry counter -->
            <Border Grid.Row="1" Padding="6">
                <telerik:Label Content="{Binding SongCount}"  />
            </Border>
        </Grid>

        <GridSplitter Grid.Row="3" Style="{StaticResource WorkspaceHorizontalGridSplitterStyle}" VerticalAlignment="Center" />

        <Grid Grid.Row="4" Visibility="{Binding HasSelectedSong, Converter={StaticResource BooleanToVisibilityConverter}}">
            <common:MapDetailTailoredControl DataContext="{Binding SelectedSong.MapDetailViewModel}" />
        </Grid>

        <common:MapDetailNoDataControl Grid.Row="4" Visibility="{Binding HasSelectedSong, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>


