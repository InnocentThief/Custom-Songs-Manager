<UserControl x:Class="CSM.App.Views.Controls.Playlists.PlaylistsTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSM.App.Views.Controls.Playlists"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>

        <HierarchicalDataTemplate x:Key="FolderDataTemplate" ItemsSource="{Binding Playlists}">
            <StackPanel Orientation="Horizontal">
                <telerik:RadGlyph Glyph="&#xe900;" />
                <TextBlock Text="{Binding Name}" Margin="6,0" />
            </StackPanel>
        </HierarchicalDataTemplate>

        <DataTemplate x:Key="PlaylistDataTemplate">
            <StackPanel Orientation="Horizontal">
                <telerik:RadGlyph Glyph="&#xe20a;" />
                <TextBlock Text="{Binding Name}" Margin="6,0" />
            </StackPanel>
        </DataTemplate>

        <local:PlaylistsTreeDataTemplateSelector x:Key="PlaylistsTreeDataTemplateSelector"
                                                         FolderTemplate="{StaticResource FolderDataTemplate}"
                                                         PlaylistTemplate="{StaticResource PlaylistDataTemplate}"/>

        <Style x:Key="ItemContainerStyle" TargetType="{x:Type telerik:RadTreeViewItem}">
            <Setter Property="ExpanderButtonMinWidth" Value="0" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="IsExpanded" Value="False" />
        </Style>

    </UserControl.Resources>

    <telerik:RadBusyIndicator IsBusy="{Binding LoadingInProgress}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Background="#FF018574">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!-- Title -->
                <TextBlock Text="Playlists" Style="{StaticResource HeaderTitleStyle}" />
                <!-- Commands -->
                <telerik:RadToolBar Grid.Column="1" Style="{StaticResource HeaderToolBarStyle}" >
                    <telerik:RadButton Command="{Binding OpenInFileExplorerCommand}" ToolTip="Open in File Explorer">
                        <telerik:RadGlyph Glyph="&#xe134;" />
                    </telerik:RadButton>
                    <telerik:RadButton Command="{Binding RefreshCommand}" ToolTip="Refresh">
                        <telerik:RadGlyph Glyph="&#xe103;" />
                    </telerik:RadButton>
                    <telerik:RadToolBarSeparator Visibility="{Binding HasEditHeader, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <telerik:RadButton Command="{Binding AddFolderCommand}" ToolTip="Add folder" Visibility="{Binding HasEditHeader, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <telerik:RadGlyph Glyph="&#xe902;" />
                    </telerik:RadButton>
                    <telerik:RadButton Command="{Binding AddPlaylistCommand}" ToolTip="Add playlist" Visibility="{Binding HasEditHeader, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <telerik:RadGlyph Glyph="&#xe907;" />
                    </telerik:RadButton>
                    <telerik:RadToolBarSeparator Visibility="{Binding HasEditHeader, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <telerik:RadButton Command="{Binding DeletePlaylistCommand}" ToolTip="Delete selected playlist" Visibility="{Binding HasEditHeader, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <telerik:RadGlyph Glyph="&#xe10c;" />
                    </telerik:RadButton>
                </telerik:RadToolBar>
            </Grid>
            <!-- Content -->
            <telerik:RadTreeView 
                Grid.Row="1"
                IsVirtualizing="True"
                ItemContainerStyle="{StaticResource ItemContainerStyle}"
                ItemsIndent="10"
                ItemTemplateSelector="{StaticResource PlaylistsTreeDataTemplateSelector}"
                ItemsSource="{Binding Playlists}"
                SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"
                telerik:AnimationManager.IsAnimationEnabled="False"
            />
        </Grid>
    </telerik:RadBusyIndicator>

</UserControl>
