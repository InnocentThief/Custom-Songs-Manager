<UserControl x:Class="CSM.App.Views.Controls.SongSources.Twitch.LoggedInControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:behaviours="clr-namespace:CSM.App.Behaviours"
             xmlns:common="clr-namespace:CSM.App.Views.Common"
             xmlns:gl="clr-namespace:System.Globalization;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="3" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>

        <!-- Channels -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <!-- Title -->
                <TextBlock Text="Channels" Style="{StaticResource HeaderTitleStyle}" Foreground="#88018574" />
                <!-- Commands -->
                <telerik:RadToolBar Grid.Column="1" Style="{StaticResource HeaderToolBarNoGripStyle}" >
                    <telerik:RadButton Command="{Binding AddChannelCommand}" ToolTip="Add channel">
                        <telerik:RadGlyph Glyph="&#xe11e;" Foreground="#88018574" />
                    </telerik:RadButton>
                </telerik:RadToolBar>
            </Grid>

            <telerik:RadGridView Grid.Row="1" ItemsSource="{Binding Channels}" Style="{StaticResource RadGridViewStyle}" Margin="3" ShowGroupPanel="False" ShowColumnHeaders="False" GridLinesVisibility="None">
                <telerik:RadGridView.Columns>
                    <telerik:GridViewDataColumn Width="*" IsReadOnly="True">
                        <telerik:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <telerik:RadWatermarkTextBox WatermarkContent="Enter a channel name" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </telerik:GridViewColumn.CellTemplate>
                    </telerik:GridViewDataColumn>
                    <telerik:GridViewColumn Width="Auto" IsReadOnly="True">
                        <telerik:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <telerik:RadButton 
                                        Command="{Binding JoinCommand}" 
                                        Content="Join" 
                                        Grid.Column="1" 
                                        Background="{telerik:Windows11Resource ResourceKey=AlternativeBrush}" 
                                        BorderThickness="0" 
                                        Padding="6"
                                        Focusable="False"
                                        Visibility="{Binding Joined, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"/>
                                    <telerik:RadButton 
                                        Command="{Binding LeaveCommand}" 
                                        Content="Leave" 
                                        Grid.Column="1" 
                                        Background="{telerik:Windows11Resource ResourceKey=AlternativeBrush}" 
                                        BorderThickness="0" 
                                        Padding="6"
                                        Focusable="False"
                                        Visibility="{Binding Joined, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>

                            </DataTemplate>
                        </telerik:GridViewColumn.CellTemplate>
                    </telerik:GridViewColumn>
                    <telerik:GridViewColumn Width="Auto" IsReadOnly="True">
                        <telerik:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <telerik:RadButton Command="{Binding RemoveCommand}" Grid.Column="1" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" ToolTip="Remove channel" Focusable="False">
                                    <telerik:RadGlyph Glyph="&#xe121;" Foreground="Red" />
                                </telerik:RadButton>
                            </DataTemplate>
                        </telerik:GridViewColumn.CellTemplate>
                    </telerik:GridViewColumn>
                </telerik:RadGridView.Columns>
            </telerik:RadGridView>
        </Grid>

        <!-- Song history -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Song History" Style="{StaticResource HeaderTitleStyle}" Foreground="#88018574" />
                <!-- Commands -->
                <telerik:RadToolBar Grid.Column="1" Style="{StaticResource HeaderToolBarStyle}" >
                    <telerik:RadButton Command="{Binding ClearSongHistoryCommand}" ToolTip="Clear song history">
                        <telerik:RadGlyph Glyph="&#xe10c;" Foreground="#88018574" />
                    </telerik:RadButton>
                </telerik:RadToolBar>
            </Grid>

            <telerik:RadGridView 
                behaviours:GridViewHeaderContextMenuBehaviour.IsEnabled="True"
                Grid.Row="1" 
                Margin="3"
                ItemsSource="{Binding Maps}" 
                SelectedItem="{Binding SelectedMap}" 
                Style="{StaticResource RadGridViewStyle}">
                <telerik:RadGridView.Columns>
                    <!-- Add button (will add song to selected playlist) -->
                    <telerik:GridViewColumn Width="SizeToCells">
                        <telerik:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <telerik:RadButton Command="{Binding AddToPlaylistCommand}" Grid.Column="1" Background="Transparent" BorderThickness="0" ToolTip="Add to playlist">
                                    <telerik:RadGlyph Glyph="&#xe11e;" Foreground="#FF008BC1" />
                                </telerik:RadButton>
                            </DataTemplate>
                        </telerik:GridViewColumn.CellTemplate>
                    </telerik:GridViewColumn>
                    <!-- Channel -->
                    <telerik:GridViewDataColumn Header="Channel" Width="*" DataMemberBinding="{Binding ChannelName}" />
                    <!-- Received At -->
                    <telerik:GridViewDataColumn Header="Received at" Width="SizeToCells" DataMemberBinding="{Binding ReceivedAt, StringFormat='g', ConverterCulture={x:Static gl:CultureInfo.CurrentCulture}}" />
                    <!-- BSR -->
                    <telerik:GridViewDataColumn Header="BSR" Width="Auto" DataMemberBinding="{Binding BsrKeyHex}" IsFilterable="False">
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BsrKey}" />
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>
                    <!-- Song Name -->
                    <telerik:GridViewDataColumn Header="Title" Width="*" DataMemberBinding="{Binding SongName}" />
                    <!-- Song Author Name -->
                    <telerik:GridViewDataColumn Header="Artist" Width="*" DataMemberBinding="{Binding SongAuthorName}" />
                    <!-- Level Author Name -->
                    <telerik:GridViewDataColumn Header="Mapper" Width="*" DataMemberBinding="{Binding LevelAuthorName}" />
                    <!-- Delete button (remove song from playlist) -->
                    <telerik:GridViewColumn>
                        <telerik:GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <telerik:RadButton Command="{Binding RemoveCommand}" Grid.Column="1" Background="Transparent" BorderThickness="0" Margin="0,0,10,0" ToolTip="Delete song">
                                    <telerik:RadGlyph Glyph="&#xe121;" Foreground="Red" />
                                </telerik:RadButton>
                            </DataTemplate>
                        </telerik:GridViewColumn.CellTemplate>
                    </telerik:GridViewColumn>
                </telerik:RadGridView.Columns>
            </telerik:RadGridView>

            <!-- Entry counter -->
            <Border Grid.Row="2" Padding="6">
                <telerik:Label Content="{Binding MapCount}"  />
            </Border>

        </Grid>

        <GridSplitter Grid.Row="2" Style="{StaticResource WorkspaceHorizontalGridSplitterStyle}" VerticalAlignment="Center" />

        <Grid Grid.Row="3" Visibility="{Binding HasSelectedMap, Converter={StaticResource BooleanToVisibilityConverter}}">
            <common:MapDetailTailoredControl DataContext="{Binding SelectedMap.MapDetailViewModel}" />
        </Grid>

        <common:MapDetailNoDataControl Grid.Row="3" Visibility="{Binding HasSelectedMap, Converter={StaticResource InvertedBooleanToVisibilityConverter}}" />

    </Grid>
</UserControl>
