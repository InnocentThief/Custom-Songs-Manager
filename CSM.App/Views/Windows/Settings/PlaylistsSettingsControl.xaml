<UserControl x:Class="CSM.App.Views.Windows.Settings.PlaylistsSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:p="clr-namespace:CSM.App.Properties"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="0,6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- Availability -->
        <telerik:Label Content="{x:Static p:Resources.Settings_Playlists_Available}" />
        <telerik:RadToggleSwitchButton Grid.Column="1"  Focusable="False" IsChecked="{Binding Available}" />
        <!-- Playlists Path -->
        <telerik:Label Content="Playlists path" Grid.Row="1" />
        <telerik:RadFilePathPicker Grid.Column="1" Grid.Row="1" DialogType="OpenFolder" FilePath="{Binding PlaylistsPath}" Text="{Binding PlaylistsPath}" FilePathChanged="RadFilePathPicker_FilePathChanged" />
        <!-- Sources: Custom levels -->
        <telerik:Label Content="Song sources" Grid.Row="2" />
        <telerik:RadToggleSwitchButton Grid.Column="1" Grid.Row="2" CheckedContent="Custom Levels" UncheckedContent="Custom levels" ContentPosition="Right" Focusable="False" IsChecked="{Binding CustomLevelsSourceAvailable}" />
        <!-- Sources: Playlists -->
        <telerik:RadToggleSwitchButton Grid.Column="1" Grid.Row="3" CheckedContent="Playlists" UncheckedContent="Playlists" ContentPosition="Right" Focusable="False" IsChecked="{Binding PlaylistsSourceAvailable}" />
        <!-- Sources: Favourites -->
        <telerik:RadToggleSwitchButton Grid.Column="1" Grid.Row="4" CheckedContent="Beat Saber Favourites" UncheckedContent="Beat Saber favourites" ContentPosition="Right" Focusable="False" IsChecked="{Binding FavouritesAvailable}" />
        <!-- Sources: Song search -->
        <telerik:RadToggleSwitchButton Grid.Column="1" Grid.Row="5" CheckedContent="Song Search" UncheckedContent="Song search" ContentPosition="Right" Focusable="False" IsChecked="{Binding SongSearchAvailable}" />
        <!-- Sources: Song suggest -->
        <telerik:RadToggleSwitchButton Grid.Column="1" Grid.Row="6" CheckedContent="Song Suggest" UncheckedContent="Song suggest" ContentPosition="Right" Focusable="False" IsChecked="{Binding SongSuggestAvailable}" />
        <!-- Sources: Twitch -->
        <telerik:RadToggleSwitchButton Grid.Column="1" Grid.Row="7" CheckedContent="Twitch" UncheckedContent="Twitch" ContentPosition="Right" Focusable="False" IsChecked="{Binding TwitchAvailable}" />
        <!-- Sources: BeatLeader -->
        <telerik:RadToggleSwitchButton Grid.Column="1" Grid.Row="8" CheckedContent="BeatLeader" UncheckedContent="BeatLeader" ContentPosition="Right" Focusable="False" IsChecked="{Binding BeatLeaderAvailable}" />
        <!-- Sources: ScoreSaber -->
        <telerik:RadToggleSwitchButton Grid.Column="1" Grid.Row="9" CheckedContent="ScoreSaber" UncheckedContent="ScoreSaber" ContentPosition="Right" Focusable="False" IsChecked="{Binding ScoreSaberAvailable}" />

        <telerik:Label Content="Default song source" Grid.Row="10" />
        <telerik:RadComboBox Grid.Column="1" Grid.Row="10" Focusable="False" ItemsSource="{Binding SongSources}" SelectedItem="{Binding SelectedSongSource}" DisplayMemberPath="DisplayText" />

    </Grid>
</UserControl>
