             d:DesignHeight="450" d:DesignWidth="800">


    <telerik:RadFluidContentControl NormalToSmallThreshold="600,150" NormalToLargeThreshold="600, 150">
        <telerik:RadFluidContentControl.SmallContent>
            <TextBlock Text="small small small smallsmallsmallsmall small smallsmallsmall small smallsmall small" Foreground="White" />
        </telerik:RadFluidContentControl.SmallContent>
        <telerik:RadFluidContentControl.Content>
            <TextBlock Text="normal normal normalnormalnormal normalnormalnormalnormal normal normal normal normal" Foreground="White" />
        </telerik:RadFluidContentControl.Content>
        <telerik:RadFluidContentControl.LargeContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- Title & Commands -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!-- Title -->
                    <TextBlock Text="Song Detail" Style="{StaticResource HeaderTitleStyle}" Foreground="#88018574" />
                    <!-- Commands -->
                    <telerik:RadToolBar Grid.Column="1" Style="{StaticResource HeaderToolBarStyle}" >
                        <telerik:RadButton Command="{Binding CreatePlaylistCommand}" ToolTip="{Binding CreatePlaylistCommandText}" Visibility="{Binding HasEditHeader, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <telerik:RadGlyph Glyph="&#xe907;" Foreground="#88018574" />
                        </telerik:RadButton>
                        <telerik:RadButton Command="{Binding OverwritePlaylistCommand}" ToolTip="{Binding OverwritePlaylistCommandText}" Visibility="{Binding HasEditHeader, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <telerik:RadGlyph Glyph="&#xe945;" Foreground="#88018574" />
                        </telerik:RadButton>
                    </telerik:RadToolBar>
                </Grid>

                <Grid Grid.Row="1" Margin="6">
                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White" />
                        </Style>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="50" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="300" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- Cover image -->
                    <Image Source="{Binding CoverUrl}" HorizontalAlignment="Left" />
                    <!-- Title / Artist / Mapper -->
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <!-- SongName -->
                        <TextBlock Text="Title" FontWeight="DemiBold" />
                        <TextBlock Grid.Column="1" Text="{Binding SongName}" TextWrapping="Wrap" />
                        <!-- SongSubName -->
                        <TextBlock Grid.Row="1" Text="Subtitle" FontWeight="DemiBold" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SongSubName}" TextWrapping="Wrap" />
                        <!-- SongAuthorName -->
                        <TextBlock Grid.Row="2" Text="Artist" FontWeight="DemiBold" />
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SongAuthorName}" TextWrapping="Wrap" />
                        <!-- LevelAuthorName -->
                        <TextBlock Grid.Row="3" Text="Mapper" FontWeight="DemiBold" />
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding LevelAuthorName}" TextWrapping="Wrap" />
                    </Grid>

                    <!-- Level informations -->
                    <Grid Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
